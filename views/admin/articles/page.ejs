<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/homenavbar.ejs'); %>
<body>
   <div class="container">
      <hr>
  
      <%  result.articles.rows.forEach( article => { %>
          <div class="card mt-3">
             <div class="card-header">
               <h2  style="float: left;"><%= article.title %></h2>
               <h6 class="text-secondary" style="float: right;font-size: x-small;"><%= article.createdAt %></h6>
             </div>
             <div class="card-body">
               <a class="btn btn-sm btn-success" title="Ler artigo" href="/<%=article.slug%>" ><i class="far fa-newspaper mr-1"></i> Ler artigo</a>
             </div>
          </div>  
      <% }) %>   

      <hr>
      <div class="row">
         <div class="col col-12">

            <% if(result.page != 0) { %>
               <a href="/articles/page/<%= result.page - 1 %>" style="float: left; text-decoration: none;"> <i class="fas fa-backward "></i> voltar</a>
               <% }%>

            <% if(result.next) { %>
            <a href="/articles/page/<%= result.page + 1 %>" style="float: right; text-decoration: none;"> Proxima<i class="fas fa-forward ml-1"></i> </a>
            <% }%>
         </div>
        
      </div>
      <hr>

   </div>
</body>


<%- include('../../partials/footer.ejs'); %>