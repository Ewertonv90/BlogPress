<%- include('../../partials/header.ejs'); %>

<%- include('../../partials/navbar.ejs'); %>

<body>
     <div class="container">
         <hr>
         <h2>Usuários</h2>
         <hr>
            <a href="/admin/users/create" class="btn btn-success mb-3" ><i class="far fa-plus-square mr-1"></i>Novo usuário</a>
         <table class="table table-bordered">
             <thead>
                 <tr>
                     <th>Código</th>
                     <th>Nome</th>
                     <th>Sobrenome</th>
                     <th>E-mail</th>
                     <th>Ações</th>
                 </tr>
             </thead>
             <tbody>
               
                 <% user.forEach(user =>{ %>

                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a class="btn btn-sm btn-warning" title="edita o usuário" href="/admin/users/edit/<%= user.id %>" ><i class="far fa-edit"></i></a>

                            <form action="/users/delete" method="POST" style="display: inline;" 
                            onsubmit="confirmaExcluir(event,this)">
                                <input type="hidden" name="id"  value="<%= user.id %>">
                                <button class="btn btn-sm btn-danger" title="apaga o usuário"><i class="far fa-trash-alt"></i></button>
                                
                            </form>
                        </td>
                    </tr>

                 <% }) %>
             </tbody>
         </table>
     </div>
</body>

<%- include('../../partials/footer.ejs'); %>
<script>
    function confirmaExcluir(event, form){
       
       var decisao = confirm("Deletar usuário?")

       if(decisao){
            form.submit();
       }else{
         event.preventDefault();
       }
    }

</script>