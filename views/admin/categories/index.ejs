<%- include('../../partials/header.ejs'); %>

<%- include('../../partials/navbar.ejs'); %>

<body>
     <div class="container">
         <hr>
         <h2>Categorias</h2>
         <hr>
            <a href="/admin/categories/new" class="btn btn-success mb-3" ><i class="far fa-plus-square mr-1"></i>Nova categoria</a>
         <table class="table table-bordered">
             <thead>
                 <tr>
                     <th>Código</th>
                     <th>Título</th>
                     <th>Slug</th>
                     <th>Ações</th>
                 </tr>
             </thead>
             <tbody>
               
                 <% categories.forEach(category =>{ %>

                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>
                        <td>
                            <a class="btn btn-sm btn-warning" title="edita a categoria" href="/admin/categories/edit/<%= category.id %>" ><i class="far fa-edit"></i></a>

                            <form action="/categories/delete" method="POST" style="display: inline;" 
                            onsubmit="confirmaExcluir(event,this)">
                                <input type="hidden" name="id"  value="<%= category.id %>">
                                <button class="btn btn-sm btn-danger" title="apaga a categoria"><i class="far fa-trash-alt"></i></button>
                                
                            </form>
                        </td>
                    </tr>

                 <% }) %>
             </tbody>
         </table>
     </div>
</body>

<%- include('../../partials/footer.ejs'); %>
<script>
    function confirmaExcluir(event, form){
       
       var decisao = confirm("Deletar categoria?")

       if(decisao){
            form.submit();
       }else{
         event.preventDefault();
       }
    }

</script>